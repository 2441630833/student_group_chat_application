.status-bar {
  position: fixed;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
  display: flex;
  overflow: hidden;
  justify-content: space-between;
  z-index: 998;
  color: #272832;
  transition-property: all;
  background: rgba(255, 255, 255, 0.96);
}
.status-bar .login-c {
  width: 60rpx;
  height: 60rpx;
  padding-top: 22rpx;
  padding-left: 32rpx;
}
.status-bar .login-back {
  width: 20rpx;
  height: 34rpx;
}
.status-bar .scrollv {
  width: 84%;
}
.status-bar .scrollv .users {
  display: flex;
}
.status-bar .scrollv .users .user-l {
  padding: 12rpx 8rpx;
  position: relative;
}
.status-bar .scrollv .users .user-l image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.status-bar .scrollv .users .user-l .tip {
  width: 14rpx;
  height: 14rpx;
  background: #ff4d3c;
  position: absolute;
  top: 12rpx;
  right: 10rpx;
  border-radius: 50%;
  z-index: 10;
}
.main {
  padding: 160rpx 28rpx 160rpx;
}
.main .msg,
.modfiy-mian .msg {
  display: flex;
  align-items: flex-end;
  padding: 40rpx 0;
}
.main .msg image,
.modfiy-mian .msg image {
  flex: none;
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  margin: 0 20rpx;
}
.main .msg .messageOverall .messageContent,
.modfiy-mian .msg .messageOverall .messageContent {
  max-width: 380rpx;
  padding: 26rpx 32rpx;
  min-height: 48rpx;
  font-size: 28rpx;
  color: #191d23;
  line-height: 40rpx;
}
.main .msg .messageOverall .messageTime,
.modfiy-mian .msg .messageOverall .messageTime {
  padding-top: 8rpx;
  position: absolute;
  font-size: 24rpx;
  color: rgba(25, 29, 35, 0.5);
  line-height: 34rpx;
}
.main .left,
.modfiy-mian .left {
  flex-direction: row;
}
.main .left .messageContent,
.modfiy-mian .left .messageContent {
  background: #f4f4f4;
  border-radius: 24rpx 24rpx 24rpx 0px;
  overflow: auto;
  word-wrap: break-word;
}
.main .right,
.modfiy-mian .right {
  flex-direction: row-reverse;
}
.main .right .messageContent,
.modfiy-mian .right .messageContent {
  background: #c8ffc8;
  border-radius: 24rpx 24rpx 0px 24rpx;
  overflow: auto;
  word-wrap: break-word;
}
.main .right .messageTime,
.modfiy-mian .right .messageTime {
  right: 132rpx;
}
.main .center,
.modfiy-mian .center {
  text-align: center;
  padding: 32rpx 0 20rpx;
}
.main .center .inner,
.modfiy-mian .center .inner {
  font-size: 24rpx;
  display: inline-block;
  color: rgba(25, 29, 35, 0.5);
  line-height: 34rpx;
}
.send {
  position: fixed;
  z-index: 1002;
  bottom: 0;
  width: 100%;
  padding-bottom: 25px;
  min-height: 100rpx;
  background: rgba(255, 255, 255, 0.96);
  display: flex;
}
.send .chat-send {
  margin: 12rpx 48rpx 12rpx 0rpx;
  flex: 1;
  width: 100%;
  min-height: 40rpx;
  background: #f2f2f2;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #191d23;
  line-height: 40rpx;
  padding: 24rpx 80rpx 24rpx 24rpx;
}
.send .send-img {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 68rpx;
  top: 32rpx;
}
.send .send-in {
  display: flex;
  width: 100%;
  padding-left: 48rpx;
}
.send .send-in .emoji-img {
  width: 48rpx;
  height: 48rpx;
  background: #f2f2f2;
  padding: 10px;
  border-radius: 24rpx;
  margin: 12rpx 16rpx 12rpx 0rpx;
}
.send .send-in .gpt-img {
  width: 48rpx;
  height: 48rpx;
  background: #f2f2f2;
  padding: 10px;
  border-radius: 24rpx;
  margin: 12rpx 16rpx 12rpx 0rpx;
}
.modify {
  position: fixed;
  overflow: hidden;
  left: 0;
  bottom: -90%;
  width: 100%;
  height: 90%;
  z-index: 1000;
  background: #fff;
  border-radius: 48rpx 48rpx 0px 0px;
}
.u-name {
  position: absolute;
  top: 0;
  background-color: #fff;
  height: 80rpx;
  text-align: center;
  width: 100%;
  line-height: 80rpx;
}
.modfiy-mian {
  padding: 88rpx 28rpx 120rpx;
  box-sizing: border-box;
  height: 100%;
}
.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.4);
}
.join {
  margin-top: 180rpx;
  width: 200rpx;
  height: 200rpx;
  background: #ff833c;
  box-shadow: 0px 36rpx 68rpx -8rpx rgba(255, 131, 60, 0.5);
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  line-height: 200rpx;
  color: white;
}
.emoji-display {
  position: absolute;
  width: 100%;
  height: 210px;
  background-color: white;
  top: -210px;
  left: 0;
  overflow-y: auto;
}
.emoji-display ._ul {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
}
.emoji-display ._ul ._li {
  padding: 2px 3px;
  font-size: 2.2rem;
}

